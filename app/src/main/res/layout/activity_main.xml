<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:background="#98ccc8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.ufes.inf.hfilho.previsodotempo.ui.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/l_main"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <TextView
                    android:text="VitÃ³ria, BR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/t_cidade_pais"
                    android:textSize="24sp"
                    android:textColor="#FAFAFA" />

                <TextView
                    android:text="Predominantemente limpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/t_clima"
                    android:layout_centerHorizontal="true"
                    android:textColor="#fafafa" />

                <TextView
                    android:text="20'"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/t_temp"
                    android:textSize="65sp" />
            </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/l_dias"/>
        <TextView
            android:id="@+id/t_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Atualizado em "/>

        </LinearLayout>


</ScrollView>
